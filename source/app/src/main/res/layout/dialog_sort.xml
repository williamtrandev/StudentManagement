<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding">

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lựa chọn tiêu chí sắp xếp"
        android:textColor="@color/primary"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgName"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toStartOf="@+id/imgBirthdate"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9"
        app:srcCompat="@drawable/ic_sort_name" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Theo tên"
        app:layout_constraintEnd_toEndOf="@+id/imgName"
        app:layout_constraintStart_toStartOf="@+id/imgName"
        app:layout_constraintTop_toBottomOf="@+id/imgName" />

    <ImageView
        android:id="@+id/imgBirthdate"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/imgName"
        app:layout_constraintEnd_toStartOf="@+id/imgClass"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imgName"
        app:layout_constraintTop_toTopOf="@+id/imgName"
        app:srcCompat="@drawable/ic_sort_birthdate" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Theo ngày sinh"
        app:layout_constraintEnd_toEndOf="@+id/imgBirthdate"
        app:layout_constraintStart_toStartOf="@+id/imgBirthdate"
        app:layout_constraintTop_toBottomOf="@+id/imgBirthdate" />

    <ImageView
        android:id="@+id/imgClass"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="@+id/imgBirthdate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imgBirthdate"
        app:layout_constraintTop_toTopOf="@+id/imgBirthdate"
        app:srcCompat="@drawable/ic_sort_class" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Theo lớp"
        app:layout_constraintEnd_toEndOf="@+id/imgClass"
        app:layout_constraintStart_toStartOf="@+id/imgClass"
        app:layout_constraintTop_toBottomOf="@+id/imgClass" />
</androidx.constraintlayout.widget.ConstraintLayout>